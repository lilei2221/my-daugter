<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!-- 顶部标签栏 -->

    <!-- DCA和MARS的选择 -->

    <!-- 单程开关 -->

    <!-- 乘客数量选择 -->

    <!-- 火箭图标 -->

    <!-- 发射按钮 -->

    <TextView
        android:id="@+id/tab_space_stations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Space Stations"
        app:layout_constraintEnd_toStartOf="@+id/tab_flights"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tab_flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Flights"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tab_rovers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Rovers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toEndOf="@+id/tab_flights"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 设置背景颜色为红色 --><![CDATA[
        app:layout_constraintBottom_toTopOf="@+id/traveller_count"
        app:layout_constraintStart_toStartOf="parent" />

    ]]>

    <Switch
        android:id="@+id/switch_one_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:text="One Way"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="263dp" />

    <TextView
        android:id="@+id/traveller_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#FFA500"
        android:text="1 Traveller"
        app:layout_constraintTop_toBottomOf="@+id/switch_one_way"
        tools:layout_editor_absoluteX="40dp" />

    <ImageView
        android:id="@+id/rocket_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_2"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <!-- 应用自定义背景 --><![CDATA[
    app:layout_constraintBottom_toBottomOf="parent"
    />


    ]]>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/img" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="56dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/space_station_icon"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="11dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="27dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/rocket_icon"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="49dp"
        android:layout_height="53dp"
        app:srcCompat="@drawable/rover_icon"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="3dp" />

    <!-- 设置背景颜色为绿色 --><![CDATA[
    tools:layout_editor_absoluteX="56dp"
    tools:layout_editor_absoluteY="126dp" />

    ]]>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="151dp"
        android:layout_height="99dp"
        android:background="#215E21"
        android:text="MARS"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="144dp"
        android:layout_height="97dp"
        android:background="#215E21"
        android:text="DCA"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="138dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/double_arrows"
        tools:layout_editor_absoluteY="158dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="336dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="415dp"
        android:layout_height="43dp"
        android:background="#215E21"
        android:gravity="center"

        android:text="DEPART"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="687dp" /> <!-- 设置背景颜色为绿色 -->
    tools:layout_editor_absoluteX="56dp"
    tools:layout_editor_absoluteY="126dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
